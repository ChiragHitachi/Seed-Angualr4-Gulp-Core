{
  "rulesDirectory": [
    "node_modules/codelyzer"
  ],
  "rules":{
    "directive-selector": [true, "attribute", "sp3-dir", "camelCase"],
    "component-selector": [true, "element", "sp3-comp", "kebab-case"],
    "trailing-comma": [false, {"multiline": "always", "singleline": "never"}],
    "interface-name": [false, "always-prefix"],
    "use-input-property-decorator": true,
    "use-output-property-decorator": true,
    "use-host-property-decorator": true,
    "no-attribute-parameter-decorator": true,
    "no-input-rename": true,
    "no-output-rename": true,
    "no-forward-ref": true,
    "use-life-cycle-interface": true,
    "use-pipe-transform-interface": true,
    // [ENABLED, "SUFFIX"]
    // Where "SUFFIX" is your custom suffix, for instance "Page" for Ionic 2 components.
    "component-class-suffix": [true, "Component"],
    "directive-class-suffix": [true, "Directive"],
    "templates-use-public": true,
    "no-access-missing-member": true,
    "invoke-injectable": true,
    "curly": true,
    "no-empty": true,
    "no-console": [true,"log","error","debug","info","time","timeEnd","trace"],
    "no-conditional-assignment": true,
    "no-duplicate-super": true,
    "no-duplicate-variable": true,
    "no-unused-expression": [true, "allow-fast-null-checks"],
    "triple-equals": [true, "allow-null-check", "allow-undefined-check"],
    "cyclomatic-complexity": [true, 15],
    "eofline": true,
    "indent": [true, "tabs", 2],
    "linebreak-style": [true, "CRLF"],
    "max-line-length": [true, 120],
    "binary-expression-operand-order": true,
    "import-spacing": true,
    "one-variable-per-declaration": [true, "ignore-for-loop"],
    "semicolon": [true, "always"],
    "no-unused-variable": true,
    "no-string-literal": false,
    "no-use-before-declare": true,
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "pipe-naming": [true, "camelCase", "my"],
    "quotemark": [
      true,
      "single",
      "avoid-escape"
    ],
    "variable-name": [
      true,
      "allow-leading-underscore",
      "allow-pascal-case",
      "ban-keywords",
      "check-format"
    ]
  }
}